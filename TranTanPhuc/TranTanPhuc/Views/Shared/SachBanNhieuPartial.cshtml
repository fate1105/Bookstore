@model IEnumerable<TranTanPhuc.Models.SACH>
<style>
    .col-lg-6, .col-md-6 {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .product-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

    .media-left img {
        width: 100px;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
    }

    .media-body {
        flex-grow: 1;
        padding-left: 20px;
    }

    .media-heading {
        font-size: 2rem;
        color: #0056b3;
        font-weight: bold;
    }

    p {
        font-size: 1.5rem;
        color: #555;
        margin: 5px 0;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<div class="container">
    <h2 class="text-center">SÁCH BÁN NHIỀU</h2>
    <div class="row">
        @foreach (var sach in Model)
        {
            <div class="col-lg-6 col-md-6 col-sm-12 mb-4">
                <div class="media-object-default product-card">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object imgsachbannhieu" src="~/Images/@sach.AnhBia" alt="placeholder image">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@sach.TenSach</h4>
                            <p>Mô tả chi tiết sản phẩm: @sach.MoTa</p>
                            <p>Số lượng bán: @sach.SoLuongBan</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr>
</div>